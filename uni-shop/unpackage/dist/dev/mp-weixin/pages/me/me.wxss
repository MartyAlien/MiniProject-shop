.user_info_wrap {
  height: 45vh;
  overflow: hidden;
  /* background-color: #f00; */
	background-image: -webkit-linear-gradient(315deg,#10536c,#bd6191);
	background-image: linear-gradient(135deg,#10536c,#bd6191);
  position: relative;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 50vh;
  -webkit-filter: blur(10rpx);
          filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
