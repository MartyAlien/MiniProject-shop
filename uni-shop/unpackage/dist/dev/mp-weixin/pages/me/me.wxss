  color: greenyellow;
  font-size: 38rpx;
  padding: 30rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  padding-bottom: 0rpx;
